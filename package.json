{
  "name": "sara-ai-commerce-support",
  "version": "1.0.0",
  "description": "Sara AI - Intelligent Commerce Support Advisor with Persian Language Support",
  "private": true,
  "workspaces": ["apps/*", "services/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:build": "docker-compose -f infrastructure/docker/docker-compose.yml build",
    "setup": "pnpm install && pnpm run build",
    "start": "turbo run start"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": ["ai", "commerce", "support", "persian", "rag", "llm", "chatbot", "widget"],
  "author": "TensorScholar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TensorScholar/commerce-support-advisor.git"
  },
  "bugs": {
    "url": "https://github.com/TensorScholar/commerce-support-advisor/issues"
  },
  "homepage": "https://github.com/TensorScholar/commerce-support-advisor#readme"
}
